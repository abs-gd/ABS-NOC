{% extends "layout.twig" %}

{% block title %}ABS NOC - Servers{% endblock %}

{% block content %}
    <h1>Servers</h1>

    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}
    
    {% if success %}
        <p style="color: green;">{{ success }}</p>
    {% endif %}

    {% if servers is empty %}
        <p>No servers found.</p>
    {% else %}
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>IP Address</th>
                    <th>Added on</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for server in servers %}
                    <tr>
                        <td>{{ server.name }}</td>
                        <td>{{ server.ip_address }}</td>
                        <td>{{ server.created_at }}</td>
                        <td>
                            {#<!-- Edit Form -->
                            <form method="POST" action="/servers/edit" style="display: inline;">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <input type="hidden" name="id" value="{{ server.id }}">
                                <input type="text" name="name" value="{{ server.name }}" required>
                                <input type="text" name="ip_address" value="{{ server.ip_address }}" required>
                                <button type="submit">Update</button>
                            </form>#}

                            {# Delete Form #}
                            <form method="POST" action="/servers/delete" style="display: inline;">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <input type="hidden" name="id" value="{{ server.id }}">
                                <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>

                            {# Details Link #}
                            <a href="/servers/{{ server.id }}">Details</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <h2>Add New Server</h2>
    <form method="POST" action="/servers/create">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
        <input type="text" name="name" required placeholder="Server Name">
        <input type="text" name="ip_address" required placeholder="IP Address">
        <button type="submit">Add Server</button>
    </form>
{% endblock %}
